// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// สำหรับมังงะ
model Manga {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String   @unique
  description   String?
  coverImage    String
  pages         String
  authorCredits String? // JSON string: { url: string, label: string, icon: string }[]
  extraMetadata String? // JSON string for flexible metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isHidden      Boolean  @default(false)

  // --- View Count & Rating ---
  viewCount     Int     @default(0)
  ratingSum     Int     @default(0)
  ratingCount   Int     @default(0)
  averageRating Float   @default(0)

  // --- ความสัมพันธ์ ---
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  tags       Tag[]     @relation
  ratings    MangaRating[]
  submission MangaSubmission?
}

// สำหรับหมวดหมู่
model Category {
  id          String            @id @default(cuid())
  name        String            @unique
  mangas      Manga[]
  submissions MangaSubmission[]
}

// สำหรับแท็ก
model Tag {
  id               String               @id @default(cuid())
  name             String               @unique
  mangas           Manga[]              @relation
  mangaSubmissions MangaSubmissionTag[]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  username      String?   @unique
  password      String?
  role          String    @default("user")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  submissions   MangaSubmission[]
  submissionLimit UserSubmissionLimit?
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MangaSubmission {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title           String
  slug            String?
  description     String?
  coverImage      String
  pages           String   // JSON string
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id])
  tags            MangaSubmissionTag[]
  authorCredits   String?  // JSON string
  extraMetadata   String?  // JSON string for flexible metadata
  
  status          String   @default("PENDING") // PENDING, UNDER_REVIEW, APPROVED, REJECTED
  submittedAt     DateTime @default(now())
  reviewedAt      DateTime?
  reviewedBy      String?
  reviewNote      String?
  rejectionReason String?
  
  approvedMangaId String?  @unique
  approvedManga   Manga?   @relation(fields: [approvedMangaId], references: [id])
  
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([submittedAt])
}

model MangaSubmissionTag {
  id           String          @id @default(cuid())
  submissionId String
  submission   MangaSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  tagId        String
  tag          Tag             @relation(fields: [tagId], references: [id])
  
  @@unique([submissionId, tagId])
}

model UserSubmissionLimit {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  submissionCount Int      @default(0)
  windowStart     DateTime @default(now())
  lastSubmitAt    DateTime @default(now())
  
  @@index([userId])
}

// สำหรับเก็บคะแนนของผู้ใช้ (ใช้ Hybrid Approach)
model MangaRating {
  id          String   @id @default(cuid())
  mangaId     String
  fingerprint String   // Browser fingerprint (hashed)
  ipAddress   String?  // IP Address สำรอง (hashed)
  rating      Int      // คะแนน 1-5
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  manga Manga @relation(fields: [mangaId], references: [id], onDelete: Cascade)

  @@unique([mangaId, fingerprint])
  @@index([mangaId])
  @@index([fingerprint])
}

model LoginAttempt {
  identifier String   @id
  count      Int      @default(0)
  expiresAt  DateTime
}

model SystemConfig {
  key         String  @id
  value       String
  description String?
}
