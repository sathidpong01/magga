// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// สำหรับมังงะ
model Manga {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String   @unique
  description   String?
  coverImage    String
  pages         String
  authorCredits String? // JSON string: { url: string, label: string, icon: string }[]
  authorName    String? // ชื่อผู้แต่ง สำหรับ og:title (optional)
  extraMetadata String? // JSON string for flexible metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isHidden      Boolean  @default(false)

  // --- View Count & Rating ---
  viewCount     Int   @default(0)
  ratingSum     Int   @default(0)
  ratingCount   Int   @default(0)
  averageRating Float @default(0)

  // --- ความสัมพันธ์ ---
  categoryId String?
  category   Category?        @relation(fields: [categoryId], references: [id])
  tags       Tag[]            @relation
  ratings    MangaRating[]
  submission MangaSubmission?
  comments   Comment[]

  // --- Indexes for query optimization ---
  @@index([categoryId])
  @@index([viewCount(sort: Desc)])
  @@index([updatedAt(sort: Desc)])
  @@index([isHidden])
}

// สำหรับหมวดหมู่
model Category {
  id          String            @id @default(cuid())
  name        String            @unique
  mangas      Manga[]
  submissions MangaSubmission[]
}

// สำหรับแท็ก
model Tag {
  id               String               @id @default(cuid())
  name             String               @unique
  mangas           Manga[]              @relation
  mangaSubmissions MangaSubmissionTag[]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  username      String?   @unique
  password      String?
  role          String    @default("user")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts        Account[]
  sessions        Session[]
  submissions     MangaSubmission[]
  submissionLimit UserSubmissionLimit?
  comments        Comment[]
  commentVotes    CommentVote[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MangaSubmission {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title         String
  slug          String?
  description   String?
  coverImage    String
  pages         String // JSON string
  categoryId    String?
  category      Category?            @relation(fields: [categoryId], references: [id])
  tags          MangaSubmissionTag[]
  authorCredits String? // JSON string
  extraMetadata String? // JSON string for flexible metadata

  status          String    @default("PENDING") // PENDING, UNDER_REVIEW, APPROVED, REJECTED
  submittedAt     DateTime  @default(now())
  reviewedAt      DateTime?
  reviewedBy      String?
  reviewNote      String?
  rejectionReason String?

  approvedMangaId String? @unique
  approvedManga   Manga?  @relation(fields: [approvedMangaId], references: [id])

  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([submittedAt])
}

model MangaSubmissionTag {
  id           String          @id @default(cuid())
  submissionId String
  submission   MangaSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  tagId        String
  tag          Tag             @relation(fields: [tagId], references: [id])

  @@unique([submissionId, tagId])
}

model UserSubmissionLimit {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  submissionCount Int      @default(0)
  windowStart     DateTime @default(now())
  lastSubmitAt    DateTime @default(now())

  @@index([userId])
}

// สำหรับเก็บคะแนนของผู้ใช้ (ใช้ Hybrid Approach)
model MangaRating {
  id          String   @id @default(cuid())
  mangaId     String
  fingerprint String // Browser fingerprint (hashed)
  ipAddress   String? // IP Address สำรอง (hashed)
  rating      Int // คะแนน 1-5
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  manga Manga @relation(fields: [mangaId], references: [id], onDelete: Cascade)

  @@unique([mangaId, fingerprint])
  @@index([mangaId])
  @@index([fingerprint])
}

model LoginAttempt {
  identifier String   @id
  count      Int      @default(0)
  expiresAt  DateTime
}

model SystemConfig {
  key         String  @id
  value       String
  description String?
}

// ====== Comment System Models ======

// Comment Model - รองรับทั้ง general และ per-image comments
model Comment {
  id       String  @id @default(cuid())
  content  String // เนื้อหาคอมเมนต์
  imageUrl String? // รูปแนบ (optional)

  // Relationship
  mangaId String
  manga   Manga  @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Per-image index (null = general comment, 0-N = specific page)
  imageIndex Int?

  // Parent for nested replies (phase 2)
  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")

  // Vote summary (cached for performance)
  voteScore Int @default(0)

  votes CommentVote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mangaId])
  @@index([mangaId, imageIndex])
  @@index([userId])
}

// Vote Model - เก็บ vote แยกเพื่อ track ว่าใครโหวตแล้ว
model CommentVote {
  id    String @id @default(cuid())
  value Int // +1 or -1

  commentId String
  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([commentId, userId]) // 1 vote per user per comment
  @@index([commentId])
}

// สำหรับโฆษณา/Affiliate/Donation
model Advertisement {
  id          String   @id @default(cuid())
  type        String // "affiliate" | "promptpay"
  title       String // ชื่อสำหรับ admin
  imageUrl    String // รูป banner
  linkUrl     String? // ลิงก์ affiliate
  content     String? // ข้อความเพิ่มเติม / เลข PromptPay
  placement   String // "grid" | "header" | "footer" | "manga-end" | "floating" | "modal"
  repeatCount Int      @default(1) // จำนวนครั้งที่แสดงซ้ำ (สำหรับ grid เท่านั้น)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
